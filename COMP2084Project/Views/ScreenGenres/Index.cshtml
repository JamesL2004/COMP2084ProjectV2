@model IEnumerable<COMP2084Project.Models.ScreenGenre>

@{
    ViewData["Title"] = "New Genre";
}

<h1>Add a new Tv/Movie genre</h1>

@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Edit" asp-route-id="@item.ScreenGenreId">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ScreenGenreId">Delete</a>
                    }
                <a asp-action="Details" asp-route-id="@item.ScreenGenreId">Details</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
