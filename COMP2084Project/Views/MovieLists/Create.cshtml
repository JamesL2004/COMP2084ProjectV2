@model COMP2084Project.Models.MovieList

@{
    ViewData["Title"] = "Create a New List";
}

<h1>Create a New List</h1>

<h4>Create</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieListName" class="control-label"></label>
                <input asp-for="MovieListName" class="form-control" />
                <span asp-validation-for="MovieListName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieListDescription" class="control-label"></label>
                <textarea asp-for="MovieListDescription" class="form-control"></textarea>
                <span asp-validation-for="MovieListDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
