@model IEnumerable<COMP2084Project.Models.MovieList>

@{
    ViewData["Title"] = "Your Movie Lists";
}

<h1>Your Movie Lists</h1>

@if (User.Identity.IsAuthenticated)
{
   <p>
    <a asp-action="Create">Create New</a>
    </p>
}
<p>
    <a asp-controller="MovieEntries" asp-action="Index">View Entries</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieListName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieListDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieListName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieListDescription)
            </td>
            <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Edit" asp-route-id="@item.MovieListId">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.MovieListId">Delete</a>
                    }
                <a asp-action="Details" asp-route-id="@item.MovieListId">Details</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
