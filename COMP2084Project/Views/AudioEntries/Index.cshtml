@model IEnumerable<COMP2084Project.Models.AudioEntry>

@{
    ViewData["Title"] = "Your Previous Entries";
}

<h1>Your Previous Entries</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Albums)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AudioLists)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Albums.ArtistName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AudioLists.AudioListName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AudioEntryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AudioEntryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AudioEntryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
